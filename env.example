# Off Axis Deals Environment Variables
# Copy this file to .env.local and fill in your values

# =============================================================================
# SUPABASE CONFIGURATION
# =============================================================================
# Get these from your Supabase project settings
NEXT_PUBLIC_SUPABASE_URL=https://your-project.supabase.co
NEXT_PUBLIC_SUPABASE_ANON_KEY=eyJhbGciOiJIUzI1NiIsInR5cCI6IkpXVCJ9...

# =============================================================================
# GOOGLE MAPS CONFIGURATION
# =============================================================================
# Get API key from Google Cloud Console
# Enable: Maps JavaScript API, Places API, Geocoding API
NEXT_PUBLIC_GOOGLE_MAPS_API_KEY=AIza...
# Optional: Custom map styling
NEXT_PUBLIC_GOOGLE_MAPS_MAP_ID=your-map-id

# =============================================================================
# STRIPE CONFIGURATION (REQUIRED FOR SUBSCRIPTIONS)
# =============================================================================
# Get these from Stripe Dashboard > Developers > API Keys
STRIPE_SECRET_KEY=sk_test_...
STRIPE_PUBLISHABLE_KEY=pk_test_...
# Webhook secret from Stripe Dashboard > Webhooks
STRIPE_WEBHOOK_SECRET=whsec_...

# =============================================================================
# EMAIL SERVICE (REQUIRED FOR NOTIFICATIONS)
# =============================================================================
# Choose one: 'smtp', 'resend', 'sendgrid', or 'console' (console just logs, for development)
EMAIL_SERVICE=smtp

# =============================================================================
# SMTP CONFIGURATION (Required if using EMAIL_SERVICE=smtp)
# =============================================================================
# SMTP server details from your email provider
SMTP_HOST=mail.privateemail.com
SMTP_PORT=465              # 465 for SSL/TLS, 587 for STARTTLS
SMTP_SECURE=true           # true for 465, false for 587
SMTP_USER=customerservice@offaxisdeals.com
SMTP_PASS=your-mailbox-password

# Email identity configuration
SMTP_FROM="Off Axis Deals Support <customerservice@offaxisdeals.com>"
SMTP_REPLY_TO=customerservice@offaxisdeals.com

# Application email addresses
SUPPORT_EMAIL=customerservice@offaxisdeals.com
SALES_EMAIL=sales@offaxisdeals.com
NOREPLY_EMAIL=noreply@offaxisdeals.com

# =============================================================================
# ALTERNATIVE EMAIL SERVICES (Optional, if not using SMTP)
# =============================================================================
# Resend (recommended alternative to SMTP)
RESEND_API_KEY=re_...
# OR SendGrid
SENDGRID_API_KEY=SG...

# =============================================================================
# AI SERVICE (REQUIRED FOR AI ANALYZER)
# =============================================================================
# Choose one: OpenAI, Anthropic, or local model
OPENAI_API_KEY=sk-...
# OR
ANTHROPIC_API_KEY=sk-ant-...
# OR
LOCAL_AI_ENDPOINT=http://localhost:8000

# =============================================================================
# MOBILE APP CONFIGURATION
# =============================================================================
# Expo access token for building mobile apps
EXPO_ACCESS_TOKEN=your-expo-token
# Firebase configuration for push notifications
FIREBASE_PROJECT_ID=your-project-id
FIREBASE_PRIVATE_KEY=-----BEGIN PRIVATE KEY-----\n...
FIREBASE_CLIENT_EMAIL=firebase-adminsdk-...@your-project.iam.gserviceaccount.com

# =============================================================================
# PUSH NOTIFICATIONS
# =============================================================================
# Web push service (optional, can use browser defaults)
WEB_PUSH_PUBLIC_KEY=your-vapid-public-key
WEB_PUSH_PRIVATE_KEY=your-vapid-private-key
WEB_PUSH_EMAIL=mailto:your-email@example.com

# =============================================================================
# FEATURE FLAGS
# =============================================================================
# Enable/disable features for gradual rollout
AI_ANALYZER_ENABLED=true
PUSH_WEB_ENABLED=true
PUSH_MOBILE_ENABLED=true
SUBSCRIPTIONS_ENABLED=true
BUYER_MATCHING_ENABLED=true

# =============================================================================
# SECURITY & MONITORING
# =============================================================================
# JWT secret for additional security
JWT_SECRET=your-super-secret-jwt-key
# Sentry for error tracking (optional)
SENTRY_DSN=https://...
# Analytics (optional)
GOOGLE_ANALYTICS_ID=G-...
MIXPANEL_TOKEN=your-mixpanel-token

# =============================================================================
# DEVELOPMENT
# =============================================================================
# Set to 'development' for local dev, 'production' for live
NODE_ENV=development
# Enable debug logging
DEBUG=dealflow:*
# Database URL for direct access (optional)
DATABASE_URL=postgresql://...

# =============================================================================
# DEPLOYMENT
# =============================================================================
# Vercel deployment URL
VERCEL_URL=your-app.vercel.app
# Custom domain (optional)
NEXT_PUBLIC_APP_URL=https://offaxisdeals.com

# =============================================================================
# THIRD-PARTY INTEGRATIONS
# =============================================================================
# Property data APIs (optional)
RENTSPREE_API_KEY=your-rentspree-key
ZILLOW_API_KEY=your-zillow-key
# Social login (optional)
GOOGLE_CLIENT_ID=your-google-client-id
GOOGLE_CLIENT_SECRET=your-google-client-secret
FACEBOOK_APP_ID=your-facebook-app-id
FACEBOOK_APP_SECRET=your-facebook-app-secret

# =============================================================================
# RATE LIMITING
# =============================================================================
# Redis URL for rate limiting (optional, uses memory by default)
REDIS_URL=redis://localhost:6379
# Rate limits (requests per minute)
RATE_LIMIT_GENERAL=100
RATE_LIMIT_AI_ANALYZER=10
RATE_LIMIT_CONTACT_ACTIONS=5

# =============================================================================
# FILE STORAGE
# =============================================================================
# AWS S3 for file uploads (optional, uses Supabase Storage by default)
AWS_S3_BUCKET=your-bucket-name
AWS_S3_REGION=us-east-1
AWS_S3_ACCESS_KEY_ID=AKIA...
AWS_S3_SECRET_ACCESS_KEY=...

# =============================================================================
# BACKUP & RECOVERY
# =============================================================================
# Database backup (optional)
BACKUP_SCHEDULE=0 2 * * *  # Daily at 2 AM
BACKUP_RETENTION_DAYS=30
BACKUP_S3_BUCKET=your-backup-bucket
